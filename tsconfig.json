{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/game_launcher_frontend/components/*"],
      "@/context/*": ["src/game_launcher_frontend/context/*"],
      "@/icons/*": ["src/game_launcher_frontend/icons/*"],
      "@/api/*": ["src/game_launcher_frontend/api/*"],
      "@/utils": ["src/game_launcher_frontend/utils/index.ts"],
      "@/types": ["src/game_launcher_frontend/types/index.ts"],
      "@/hooks": ["src/game_launcher_frontend/hooks/index.ts"],
      "@/shared": ["src/game_launcher_frontend/shared/index.ts"]
    }
  },
  "include": ["src", "vite.config.ts"],
  "exclude": ["src/game_launcher_frontend/dids"]
}
